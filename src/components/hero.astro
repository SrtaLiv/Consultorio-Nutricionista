---
import { Picture } from "astro:assets";
import agusImage from "assets/AGUS.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";

---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 md:block">
    <Picture
      src={agusImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Lic. Ana Agustina Martinelli
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Experta en Nutricion<wbr /> especializada en el bienestar y la salud con mas
      de 10 a√±os ayudando a mis pacientes
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="/contact"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        Contactame

      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/plan"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        Planes
      </Link>
    </div>
  </div>
</main>
