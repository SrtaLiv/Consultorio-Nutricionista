---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/planes.astro";

const pricing = [
  {
    name: "Primer Consulta",
    price: "$15.000",
    popular: false,
    features: [
      "Consulta inicial",
      "Charla sobre alimentacion",
      "Recetarios",
      "Resolvemos tus dudas",
      "Seguimiento",
      "Planteamos objetivos",
    ],
    button: {
      text: "Contactame",
      link: "/",
    },
  },
  {
    name: "Seguimiento",
    price: {
      monthly: "$19",
      annual: "$16",
      discount: "10%",
      original: "$24",
    },
    popular: true,
    features: [
      "All Free Features",
      "Up to 20 users",
      "20 Custom domains",
      "Unlimited Collaborators",
      "Advanced Integrations",
      "Priority Support",
    ],
    button: {
      text: "Get Started",
      link: "#",
    },
  },
  {
    name: "Plan Personalizado",
    price: "Custom",
    popular: false,
    features: [
      "All Pro Features",
      "Unlimited Custom domains",
      "99.99% Uptime SLA",
      "SAML & SSO Integration",
      "Dedicated Account Manager",
      "24/7 Phone Support",
    ],
    button: {
      text: "Contact us",
      link: "/contact",
    },
  },
];
---

<Layout title="planes">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Planes</Fragment>
      <Fragment slot="desc">
        <!-- Simple & Predictable planes. No Surprises. -->
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
